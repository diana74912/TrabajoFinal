<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCD00 "
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/casa">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="116dp"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="69dp"
                android:layout_marginEnd="122dp"
                android:layout_marginRight="122dp"
                android:layout_marginBottom="205dp"
                android:fontFamily="@font/knewave"
                android:text="Registro"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="132dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="126dp"
                android:layout_marginLeft="126dp"
                android:layout_marginTop="119dp"
                android:layout_marginEnd="157dp"
                android:layout_marginRight="157dp"
                android:layout_marginBottom="81dp"
                android:background="@color/material_on_background_emphasis_medium"
                app:srcCompat="@drawable/messenger" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="664dp"
            android:layout_weight="0.4"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="32dp">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/black"
                    android:hint="@string/nombre_de_usuario"
                    android:textColor="@color/colorTextoBlanco"
                    android:textColorHighlight="@color/colorTextoBlanco"
                    android:textColorHint="@color/colorTextoBlanco" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:background="#FFCD00  "
                    app:srcCompat="?attr/selectableItemBackgroundBorderless" />

                <EditText
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@color/black"
                    android:ems="10"
                    android:hint="   E_mail"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorTextoBlanco"
                    android:textColorHint="@color/colorTextoBlanco" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:background="#FFCD00 "
                    app:srcCompat="?attr/selectableItemBackgroundBorderless" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:hint="@string/contrase_a"
                    android:inputType="textPassword"
                    android:textColor="@color/colorTextoBlanco"
                    android:textColorHint="@color/colorTextoBlanco"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:background="#FFCD00 "
                    app:srcCompat="?attr/selectableItemBackgroundBorderless" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:background="@color/black"
                    android:ems="10"
                    android:hint="@string/telefono"
                    android:inputType="number"
                    android:textColor="@color/colorTextoBlanco"
                    android:textColorHint="@color/colorTextoBlanco" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:background="#FFCD00 "
                    app:srcCompat="?attr/selectableItemBackgroundBorderless" />

                <RelativeLayout
                    android:layout_width="347dp"
                    android:layout_height="79dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/LoginBtn"
                        android:layout_width="148dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="96dp"
                        android:layout_marginLeft="96dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="103dp"
                        android:layout_marginRight="103dp"
                        android:layout_marginBottom="15dp"
                        android:background="#FFCD00"
                        android:text="Crea Cuenta "
                        android:textColorHighlight="#FFCD00" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>