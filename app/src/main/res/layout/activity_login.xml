<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/etUsuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCD00 "
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="238dp"
                android:layout_height="264dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="91dp"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="82dp"
                android:layout_marginRight="82dp"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/herra" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="193dp"
                android:layout_height="149dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="106dp"
                android:layout_marginLeft="106dp"
                android:layout_marginTop="97dp"
                android:layout_marginEnd="110dp"
                android:layout_marginRight="110dp"
                android:layout_marginBottom="48dp"
                app:srcCompat="@drawable/messenger" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="256dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="102dp"
                android:layout_marginLeft="102dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="53dp"
                android:layout_marginBottom="322dp"
                android:fontFamily="@font/knewave"
                android:text="INICIAR SESIÃ“N "
                android:textColor="@color/black"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="362dp"
                android:layout_marginRight="362dp"
                android:layout_marginBottom="3dp"
                android:background="@color/black"
                app:srcCompat="?attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="12dp"
                android:layout_height="275dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="361dp"
                android:layout_marginLeft="361dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="37dp"
                android:layout_marginRight="37dp"
                android:layout_marginBottom="5dp"
                android:background="@color/black"
                app:srcCompat="?attr/selectableItemBackgroundBorderless" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="588dp"
            android:layout_weight="0.4"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="32dp">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/black"
                    android:hint="@string/nombre_de_usuario"
                    android:textColor="@color/colorTextoBlanco"
                    android:textColorHighlight="@color/colorTextoBlanco"
                    android:textColorHint="@color/colorTextoBlanco" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:background="#FFCD00 "
                    app:srcCompat="?attr/selectableItemBackgroundBorderless" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:hint="@string/contrase_a"
                    android:inputType="textPassword"
                    android:textColor="@color/colorTextoBlanco"
                    android:textColorHint="@color/colorTextoBlanco"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="#FFCD00 "
                    app:srcCompat="?attr/selectableItemBackgroundBorderless" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="346dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_green_light"
                    android:fontFamily="@font/abril_fatface"
                    android:text="LOGIN"

                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:theme="@style/TransparenciaBoton"
                    app:cornerRadius="20dp" />

                <RelativeLayout
                    android:layout_width="347dp"
                    android:layout_height="81dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/PreguntaCuenta"
                        android:layout_width="165dp"
                        android:layout_height="34dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="175dp"
                        android:layout_marginRight="175dp"
                        android:layout_marginBottom="23dp"
                        android:text="No tienes cuenta?"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/LoginBtn"
                        android:layout_width="133dp"
                        android:layout_height="21dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="176dp"
                        android:layout_marginLeft="176dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="38dp"
                        android:layout_marginRight="38dp"
                        android:layout_marginBottom="30dp"
                        android:background="#FFCD00"
                        android:text="Crea Cuenta "
                        android:textColorHighlight="#FFCD00" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>